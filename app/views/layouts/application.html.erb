<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/0e44a172cd.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          
          <a class="navbar-brand" href="/"><span>Bookers</span></a>
          
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
          
            <% if user_signed_in? %>
              <ul class="navbar-nav ml-auto p-2">
                 <li class="nav-item">
                  <%= link_to user_path(current_user), class:'text-white' do %>
                   <strong><i class="fa-solid fa-house"></i>Home</strong>
                  <% end %>
                 </li>
                 <li class="nav-item">
                  <%= link_to users_path, class:'text-white' do %>
                  <strong><i class="fa-solid fa-users"></i>Users</strong>
                  <% end %>
                 </li>
                 <li class="nav-item">
                  <%= link_to books_path, class:'text-white' do %>
                  <strong><i class="fa-solid fa-book-open"></i>Books</strong>
                  <% end %>
                 </li>
                 <li class="nav-item">
                  <%= link_to destroy_user_session_path, method: :delete, class:'text-white' do %>
                  <strong><i class="fa-solid fa-right-from-bracket"></i>Log out</strong>
                  <% end %>
                 </li>
              </ul>   
            <% else %>
              <ul class="navbar-nav ml-auto p-2">
                 <li class="nav-item">
                  <%= link_to root_path, class:'text-white' do %>
                  <strong><i class="fa-solid fa-house"></i>Home</strong>
                  <% end %>
                 </li>
                 <li class="nav-item">
                  <%= link_to about_path, class:'text-white' do %>
                  <strong><i class="fa-solid fa-link"></i>About</strong>
                  <% end %>
                 </li>
                 <li class="nav-item">
                  <%= link_to new_user_registration_path, class:'text-white' do %>
                  <strong><i class="fa-solid fa-user-plus"></i>Sign up</strong>
                  <% end %>
                 </li>
                 <li class="nav-item">
                  <%= link_to new_user_session_path, class:'text-white' do %>
                  <strong><i class="fa-solid fa-right-to-bracket"></i>Log in</strong>
                  <% end %>
                </li>
              </ul>
            <% end %>
        </div><!-- collapse終了 -->    
        </div><!-- containarクラス終了 -->    
      </nav><!-- navクラス終了 --> 

    </header>
    <%= flash[:notice] %>
    
    <%= yield %>

  </body>
  
  <footer>
    <div class="container">
      <div class="row">
        <div class="mx-auto">
          <p>CopyRight Infratop.inc</p>
        </div>
      </div>
    </div>
  </footer>
</html>

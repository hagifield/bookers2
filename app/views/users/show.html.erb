<main>
 <div class="container px-5 px-sm-0"><!-- ユーザー詳細メイン -->
 
  <div class="row">
   
   <%= render 'books/user' ,user: @user, book: @book %>
   
   <div class="col-md-8 offset-md-1"><!-- ユーザー投稿履歴-->
   
    <h2>Books</h2>
    
    <table class="table table-hover">
     
     <thead>
      <tr>
       <th></th>
       <th>Title</th>
       <th>Opinion</th>
       <th colspan="3"></th>
      </tr>
     </thead>
     
     <tbody>
      <% @books.each do |book| %>
       <tr>
        
        <td><!--ユーザー画像-->
         <%= link_to user_path(book.user.id) do %>
          <%= image_tag book.user.get_profile_image(100,100) %>
         <% end %>
        </td>
        
        <td><!--ユーザー投稿タイトル-->
         <%= link_to book_path(book.id) do %>
          <%= book.title %>
         <% end %>
        </td>
        
        <td><!--ユーザー投稿-->
         <%= book.body %>
        </td>
       </tr>
      <% end %>
     </tbody>
     
    </table>
    
   </div>
   
  </div>
  
 </div>
 
</main>
<div class="container">
  <div clas="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      
      <%= form_with model: @user do |f| %>
        
        <% if @user.errors.any? %>
          <p><%= @user.errors.count %>件のエラーが発生しました</p>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
        
        <div class="form-group">
          <label for="user_name">name</label></br>
          <%= f.text_field :name, value: @user.name, autofocus: true, id: "inputName" %>
        </div>
        
        <div class="form-group">
          <label for="user_image">Image</label></br>
          <%= f.file_field :profile_image %>
        </div>
        
        <div class="form-group">
          <label for="user_introduction">Introduction</label></br>
          <%= f.text_field :introduction %>
        </div>
        
        <div class="form-group">
          <%= f.submit "Update User", class:'btn btn-secondary'  %>
        </div>
        
      <% end %>
    </div>
  </div>
</div>
